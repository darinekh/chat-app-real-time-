# Server Configuration
PORT=10000

# MongoDB Configuration - Use MongoDB Atlas for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chatapp?retryWrites=true&w=majority

# Database Name
DB_NAME=chatapp

# Environment
NODE_ENV=production

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random-at-least-32-characters
JWT_EXPIRES_IN=7d

# Client URL for CORS - Update with your Render domain
CLIENT_URL=https://your-app-name.onrender.com
